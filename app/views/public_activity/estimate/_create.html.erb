<% estimate = Estimate.find_by_id(activity.trackable_id) %>
<li class="collection-item">
  <a href="<%= estimate_path(estimate) if estimate.present? %>" data-remote="true">
  <span>
    <p><strong><%= activity.owner.user_name %></strong> created estimate</p>
    <time class="activity-time"><i class="material-icons">access_time</i> <span><%= distance_of_time_in_words(Time.now - activity.created_at.to_time) %></span></time>
  </span>
  </a>
</li>