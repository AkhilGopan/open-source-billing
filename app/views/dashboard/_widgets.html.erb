<div class="col s12 l12 xl7">

  <div class="dashboard-whitebox">
    <div class="row">
      <div class="col m6 total-income">

        <h4><%= link_to t("views.dashboard.amount_billed"), invoices_path %></h4>
        <div class="amount">
          <% @current_company_invoices.group("currencies.unit").sum("invoices.invoice_total").each do |currency_unit, amount| %>
              <div><%= number_to_currency_dashboard(amount, unit: currency_unit, unit_size: @unit_size, dom: 'span') %></div>
          <% end %>

        </div>
        <h4><%= link_to t("views.payments.payments"), invoices_path(type: ['sent', 'draft', 'viewed']) %></h4>
        <div class="amount">
          <% @current_company_payments.group("currencies.unit").sum("payments.payment_amount").each do |currency_unit, amount| %>
              <div><%= number_to_currency_dashboard(amount, unit: currency_unit, unit_size: @unit_size, dom: 'span') %></div>
          <% end %>
        </div>
      </div>
      <div class="col m6">
        <h4><%= link_to t("views.dashboard.ytd_income"), invoices_path(type: ['paid']) %></h4>
        <div class="amount">
          <% @ytd_invoices.group("currencies.unit").sum("payments.payment_amount").each do |currency_unit, amount| %>
              <div><%= number_to_currency_dashboard(amount, unit: currency_unit, unit_size: @unit_size, dom: 'span') %></div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="graph-holder">
      <h2>Invoices</h2>
      <%= line_chart @invoices_chart_data,
                     legend: 'bottom',
                     download: true,
                     colors: ['#00BDE5', '#8EC42A', '#F06312', '#B4E7FA', '#ECECEC']
      %>
      <!--<div id="graph_container"></div>-->
      <h2>Payments</h2>
      <%= line_chart @payments_chart_data,
                     legend: 'bottom',
                     download: true,
                     colors: ['#00BDE5', '#8EC42A', '#F06312', '#B4E7FA', '#ECECEC']
      %>
    </div>
  </div>
</div>